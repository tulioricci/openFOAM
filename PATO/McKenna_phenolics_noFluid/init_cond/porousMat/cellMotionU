FoamFile {
  version     2.0;
  format      ascii;
  class       volVectorField;
  location    "0";
  object      cellMotionU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField {

    porousMat_to_flow
    {
        type    erosionModel;
        physicsBasedErosionModel 1;
        value     $internalField;
    }

    s_back
    {
        type            wedge;
    }

    s_front
    {
        type            wedge;
    }

    porousMat_to_alumina
    {
        type            slip;
    }

    porousMat_to_graphite
    {
        type            slip;
    }
}



