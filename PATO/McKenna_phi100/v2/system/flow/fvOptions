FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
 
limitT
{
    type            limitTemperature;
    active          yes;

    selectionMode   all;
    min             200;
    max             2400;
}

verticalDamping
{
    type            verticalDamping;

    selectionMode   all;

    origin          (0 0.35 0);
    direction       (0 1 0);

    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    .05;
    }

    lambda          [0 0 -1 0 0 0 0] 100; // Damping coefficient

    timeStart       0;
    duration        5;

    writeForceFields true;
}
