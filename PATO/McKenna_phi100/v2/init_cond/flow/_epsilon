FoamFile {
  version     2.0;
  format      ascii;
  class       volScalarField;
  location    "0/cube";
  object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.0;

boundaryField {
    burner
    {
        type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    f_front
    {
        type            wedge;
    }

    f_back
    {
        type            wedge;
    }

    fuel
    {
        type            fixedValue;
        value           uniform 0.0;
    }

    shield
    {
        type            fixedValue;
        value           uniform 0.0;
    }

    flow_to_porousMat
    {
        type            zeroGradient;
    }

    flow_to_graphite
    {
        type            zeroGradient;
    }
}


