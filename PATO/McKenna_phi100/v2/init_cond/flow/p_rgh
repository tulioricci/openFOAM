FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/flow";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 1 -1 -2 0 0 0 0 ];

internalField   uniform 101325.0;

boundaryField
{
    fuel
    {
        type            fixedFluxExtrapolatedPressure;
    }

    shield
    {
        type            fixedFluxExtrapolatedPressure;
    }

    outlet
    {
        type            waveTransmissive;
        gamma           1.4;
        fieldInf        101325.0;
        lInf            0.1;
        value           uniform 101325.0;
/*        type            totalPressure; //fixedValue;*/
/*        gamma           1.4;*/
/*        p0              uniform 101325.0; // FIXME*/

    }

    burner
    {
        type            fixedFluxExtrapolatedPressure;
    }

    f_front
    {
        type            wedge;
    }

    f_back
    {
        type            wedge;
    }

    flow_to_porousMat
    {
        type            fixedFluxExtrapolatedPressure;
    }

    flow_to_graphite
    {
        type            fixedFluxExtrapolatedPressure;
    }
}


