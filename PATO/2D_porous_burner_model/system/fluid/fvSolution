FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    p_rgh
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-8;
        relTol           1e-4;
    }

    p_rghFinal
    {
        $p_rgh;
        tolerance        1e-10;
        relTol           0.0;
    }

    "(U|he|Yi)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-12;
        relTol          1e-6;
        minIter         1;
    }

    "(U|he|Yi)Final"
    {
        $U;
        relTol          0;
        minIter         1;
    }

    "G.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-6;
        relTol          1e-3;
        minIter         1;
    }

    GFinal
    {
        $G;
        relTol          0;
        minIter         1;
    }

    cellMotionU
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          1e-5;
    };
}

PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors  1;
    nCorrectors     3;
    nNonOrthogonalCorrectors 2;
}

