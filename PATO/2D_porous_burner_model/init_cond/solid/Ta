FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300.0;

boundaryField
{
  s_frontAndBack
  {
    type            empty;
  }
  s_bottom
  {
    type            fixedValue;
    value           uniform 300.0;
  }
  s_side
  {
    type            zeroGradient;
  }
  solid_to_fluid
  {
    type            compressible::turbulentTemperatureCoupledBaffleMixed;
    value           uniform 300.0;
    Tnbr            T;
    kappaMethod     lookup;
    kappa	    k_abl_sym;
  }
}


