isotropicDamping_X
{
    type            isotropicDamping;

    libs            ("libwaves.so");

    origin          (0.35 0 0);
    direction       (1 0 0);

    selectionMode   all;
    region flow;

    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    0.5;
    }

    timeStart       0;
    duration        0.2;

    value           (0 0 0);            // Value towards which the field is
                                        // relaxed
    lambda          [0 0 -1 0 0 0 0] 500; // Damping coefficient

    // Write the forcing fields: forcing:scale, forcing:forceCoeff
    writeForceFields true;
}

isotropicDamping_y
{
    type            isotropicDamping;

    libs            ("libwaves.so");

    origin          (0 0.35 0);
    direction       (0 1 0);

    selectionMode   all;
    region flow;

    scale
    {
        type        halfCosineRamp;
        start       0;
        duration    0.2;
    }

    timeStart       0;
    duration        0.5;

    value           (0 0 0);            // Value towards which the field is
                                        // relaxed
    lambda          [0 0 -1 0 0 0 0] 400; // Damping coefficient

    // Write the forcing fields: forcing:scale, forcing:forceCoeff
    writeForceFields true;
}
