FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     reactingFoam;

startFrom       latestTime;
/*startFrom       startTime;*/

startTime       0;

stopAt          endTime;

endTime         120;

deltaT          5e-5;

/*writeControl    adjustableRunTime;*/
writeControl    timeStep;

/*writeInterval   1e-3;*/
writeInterval   50;

purgeWrite      0;

writeFormat     binary;

writePrecision  15;

writeCompression off;

timeFormat      fixed;
/*timeFormat      general;*/

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           0.5;



adjustStartTime 0;

maxDeltaT   1e-4; // reduce it if the surface temperature starts oscilliating

minDeltaT   1e-6;

REVlength   1e3;

minChemDeltaT   1e-6; // Minimum time step for species equation

dYtolMin    0.05; // Min variation of mass fractions in species equation
dYtolMax    0.1; // Max
Ythreshold  0.001; // Species below this mass fraction are ignored for the time step optimization
/* End adjustable time step */

// For cfd coupled simulation, allow the flow to adjust to the solid temperature
delaySolid 1e-4; // time in seconds

// ************************************************************************* //
