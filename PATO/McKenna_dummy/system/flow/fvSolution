FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    /*"rho.*"
    {
        solver          diagonal;
    }*/

    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-7;
        relTol          0;
    }

    rhoFinal
    {
        $rho;
        tolerance       1e-7;
        relTol          0;
    }

    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-14;
        relTol           1e-7;
    }

    pFinal
    {
        $p;
        tolerance        1e-14;
        relTol           0.0;
    }

    p_rgh
    {
        $p;
        tolerance        1e-14;
        relTol           1e-7;
    }

    p_rghFinal
    {
        $p;
        tolerance        1e-14;
        relTol           0.0;
    }

    "(U|h|k|epsilon|Yi)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-14;
        relTol          1e-7;
    }

    "(U|h|k|epsilon|Yi)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors  1;
    nCorrectors     3;
    nNonOrthogonalCorrectors 2;
}

relaxationFactors {
  fields
  {
  }
  equations
  {
    "h.*"       0.5;
    "U.*"       0.5;
  }
}

