FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    porousMat_to_flow
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           uniform 300;
        Tnbr 		    T;
        kappaMethod     lookup;
        kappa		    k_abl_sym;
    }

    s_back
    {
        type            wedge;
    }

    s_front
    {
        type            wedge;
    }

    defaultFaces
    {
        type            zeroGradient;
    }
}


