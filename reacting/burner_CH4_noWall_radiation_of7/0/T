FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/fluid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    burner
    {
        type            fixedValue;
        value           uniform 300;
    }

    outlet
    {
        type            zeroGradient;
    }

    f_front
    {
        type            wedge;
    }

    f_back
    {
        type            wedge;
    }

    fuel
    {
        type            fixedValue;
        value           uniform 1800;
    }

    shield
    {
        type            fixedValue;
        value           uniform 300;
    }

    wall
    {
        type            fixedValue;
        value           uniform 300;
    }
}


