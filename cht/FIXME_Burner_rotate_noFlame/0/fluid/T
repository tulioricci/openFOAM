FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/fluid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    burner
    {
        type            fixedValue;
        value           uniform 300;
    }

    outlet
    {
        type            zeroGradient;
    }

    f_front
    {
        type            symmetry;
    }

    f_back
    {
        type            symmetry;
    }

    fuel
    {
        type            fixedValue;
        value           uniform 1800;
    }

    shield
    {
        type            fixedValue;
        value           uniform 300;
    }

    defaultFaces
    {
        type            empty;
    }

    fluid_to_solid
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        kappaMethod     fluidThermo;
        kappa           kappa;
        Tnbr            T;
        value           uniform 300;
    }
}


