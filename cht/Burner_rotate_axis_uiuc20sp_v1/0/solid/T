FoamFile
{
    version         2;
    format          ascii;
    class           volScalarField;
    object          T;
}

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    solid_to_fluid
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        kappaMethod     solidThermo;
        kappa           kappa;
        Tnbr            T;
    }

    s_axis
    {
        type            zeroGradient;
    }

    s_frontAndBack
    {
        type            zeroGradient;
    }
}


